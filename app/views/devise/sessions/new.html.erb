<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
          <h4 class="mb-0">
            <i class="fas fa-sign-in-alt mr-2"></i> ログイン
          </h4>
        </div>

        <div class="card-body">

          <% if flash[:alert] %>
            <div class="alert alert-danger">
              <i class="fas fa-exclamation-circle mr-2"></i><%= flash[:alert] %>
            </div>
          <% end %>

          <% if flash[:notice] %>
            <div class="alert alert-info">
              <i class="fas fa-info-circle mr-2"></i><%= flash[:notice] %>
            </div>
          <% end %>

          <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>

            <div class="form-group">
              <%= f.label :email, "メールアドレス", class: "font-weight-bold" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "例）example@example.com" %>
            </div>

            <div class="form-group">
              <%= f.label :password, "パスワード", class: "font-weight-bold" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワードを入力してください" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="form-group mt-4">
              <%= f.submit "ログインする", class: "btn btn-success btn-block" %>
            </div>
          <% end %>

          <hr>

          <div class="text-center">
            <p class="mb-2">
              <i class="fas fa-user-plus text-success mr-1"></i>
              <%= link_to "アカウントをお持ちでない方はこちら（新規登録）", new_user_registration_path, class: "text-success font-weight-bold text-decoration-none" %>
            </p>
            
          </div>

        </div>
      </div>

    </div>
  </div>
</div>
