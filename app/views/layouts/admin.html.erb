<!-- app/views/layouts/admin.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>管理者ページ</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <script src="https://kit.fontawesome.com/18b80b8bde.js" crossorigin="anonymous"></script>

  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %> 
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body class="bg-light">

  <nav class="navbar navbar-dark bg-dark mb-4">
    <div class="container">
      <%= link_to '管理者ダッシュボード', admin_users_path, class: 'navbar-brand' %>
      <div>
        <% if admin_signed_in? %>
          <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'btn btn-sm btn-outline-light' %>
        <% else %>
          <%= link_to 'ログイン', new_admin_session_path, class: 'btn btn-sm btn-outline-light' %>
        <% end %>
      </div>
    </div>
  </nav>


  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
