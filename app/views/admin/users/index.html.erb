<div class="container">
  <h1 class="mb-4 text-dark">
    <i class="fas fa-users-cog"></i> ユーザー一覧
  </h1>

  <table class="table table-bordered table-hover bg-white">
    <thead class="thead-dark">
      <tr>
        <th>ユーザー名</th>
        <th>メールアドレス</th>
        <th>登録日</th>
        <th>ステータス</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= l(user.created_at, format: :short) %></td>
          <td>
            <% if user.is_deleted %>
              <span class="badge badge-secondary"><i class="fas fa-user-slash"></i> 退会済</span>
            <% else %>
              <span class="badge badge-success"><i class="fas fa-user-check"></i> 利用中</span>
            <% end %>
          </td>
          <td>
            <%= link_to admin_user_path(user), class: "btn btn-sm btn-outline-primary" do %>
              <i class="fas fa-eye"></i> 詳細
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
