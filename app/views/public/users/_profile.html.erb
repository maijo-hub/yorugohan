<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10">

      <h1 class="display-4 text-success mb-4">
        <i class="fas fa-user-circle fa-lg mr-2"></i><%= user.username %>さんのページ
      </h1>

      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <p>
            <i class="fas fa-comment-dots text-success mr-2"></i>
            <strong>自己紹介：</strong><br>
            <span class="text-muted">
              <%= simple_format(user.profile.presence || "まだ自己紹介はありません。") %>
            </span>
          </p>

          <% if user_signed_in? && current_user == user %>
            <div class="mt-4 d-flex flex-wrap gap-2">
              <%= link_to edit_user_path(user), class: 'btn btn-outline-success mr-2 mb-2' do %>
                <i class="fas fa-edit"></i> プロフィールを編集
              <% end %>
              <%= link_to confirm_withdrawal_user_path(user), method: :get, class: 'btn btn-outline-danger mb-2' do %>
                <i class="fas fa-user-slash"></i> 退会する
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <h2 class="h4 text-success mb-3">
        <i class="fas fa-utensils"></i> あなたの夜ごはん投稿
      </h2>

      <% if dinners.any? %>
        <div class="row">
          <%= render partial: "public/dinners/dinner", collection: dinners, as: :dinner %>
        </div>
      <% else %>
        <div class="alert alert-light text-muted">
          <i class="fas fa-info-circle"></i> まだ夜ごはんの投稿がありません。
        </div>
      <% end %>
    </div>
  </div>
</div>
