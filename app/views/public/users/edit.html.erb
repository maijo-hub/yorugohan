<h1>プロフィール編集</h1>

<%= form_with model: @user, local: true do |f| %>
  <p>
    <%= f.label :username, "ユーザー名" %><br>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :profile, "自己紹介文" %><br>
    <%= f.text_area :profile, rows: 5 %>
  </p>

  <p>
    <%= f.submit "更新する" %>
  </p>
<% end %>
