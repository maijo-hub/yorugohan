<h1>夜ごはん一覧</h1>

<h2>夜ごはん新規投稿</h2>

<% if @dinner.errors.any? %>
  <div style="color: red;">
    <h3>エラーがあります：</h3>
    <ul>
      <% @dinner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @dinner, local: true do |f| %>
  <p>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body, "本文" %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :image, "画像" %><br>
    <%= f.file_field :image %>
  </p>

  <p>
  <%= f.label :recipe_ids, "レシピ（複数選択可）" %><br>
  <%= f.collection_check_boxes :recipe_ids, @my_recipes, :id, :title %>
</p>

  <%= f.submit "投稿する" %>
<% end %>


<hr>

<h2>投稿一覧</h2>

<% @dinners.each do |dinner| %>
   <%= render partial: "dinner", locals: { dinner: dinner } %>
  <hr>
<% end %>
