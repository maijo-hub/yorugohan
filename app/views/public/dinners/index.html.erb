<h1>夜ごはん一覧</h1>

<%= form_with model: @dinner, local: true, html: { multipart: true } do |f| %>
  <p>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :tag_list, "タグ（例: #一人暮らし #時短料理）" %><br>
    <%= f.text_field :tag_list %>
  </p>

  <p><%= f.submit "投稿" %></p>
<% end %>

<hr>

<h2>投稿一覧</h2>
<% @dinners.each do |dinner| %>
  <div>
    <% if dinner.image.attached? %>
      <%= image_tag dinner.image.variant(resize_to_limit: [300, 300]) %><br>
    <% end %>
    <strong><%= dinner.title %></strong><br>
    <%= simple_format(dinner.body) %><br>
    <small>タグ: <%= dinner.tag_list %></small>
  </div>
  <hr>
<% end %>
