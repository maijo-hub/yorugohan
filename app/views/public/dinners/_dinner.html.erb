<div class="dinner-post">
  <% if dinner.image.attached? %>
    <%= image_tag dinner.image.variant(resize_to_limit: [300, 300]) %><br>
  <% end %>

  <strong><%= link_to dinner.title, dinner_path(dinner) %></strong><br>
  <%= simple_format(dinner.body) %><br>
<p>
  <strong>レシピ：</strong>
  <% if dinner.recipes.any? %>
    <% dinner.recipes.each_with_index do |recipe, index| %>
      <%= link_to recipe.title, recipe_path(recipe) %><%= ", " unless index == dinner.recipes.size - 1 %>
    <% end %>
  <% else %>
    なし
  <% end %>
</p>

    
  <small>
    投稿者:
    <% if current_user == dinner.user %>
      <%= link_to dinner.user.username, user_path(current_user) %> <!-- 自分のマイページ -->
    <% else %>
      <%= link_to dinner.user.username, user_path(dinner.user) %> <!-- 他人のユーザーページ -->
    <% end %>
    <br>

    投稿日: <%= dinner.created_at.strftime("%Y年%m月%d日") %>
  </small>
</div>
