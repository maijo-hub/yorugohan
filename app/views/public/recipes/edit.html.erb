<!-- app/views/public/recipes/edit.html.erb -->
<h1>レシピ編集</h1>

<%= form_with(model: @recipe, local: true) do |f| %>

  <% if @recipe.errors.any? %>
    <div>
      <h2><%= pluralize(@recipe.errors.count, "件のエラー") %>があります</h2>
      <ul>
        <% @recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description, "説明・手順" %><br>
    <%= f.text_area :description, rows: 5 %>
  </div>

  <div>
    <%= f.label :image, "画像" %><br>
    <% if @recipe.image.attached? %>
      <p>現在の画像：</p>
      <%= image_tag @recipe.image.variant(resize_to_limit: [300, 300]) %><br>
    <% end %>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.submit "更新する" %>
  </div>

<% end %>

<%= link_to "戻る", recipe_path(@recipe) %>
